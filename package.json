{
  "name": "custom-server-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "deploy": "pm2 start dist/index.js -i 4 --wait-ready",
    "delete:all": "pm2 delete all",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start server/index.ts --name wordpress -i 2 --watch --wait-ready -f"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "cross-env": "^7.0.3",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "next": "^10.0.7",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@types/koa": "^2.13.0",
    "@types/koa__router": "^8.0.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^10.2.4",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.6",
    "tailwindcss": "^2.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "license": "MIT"
}
