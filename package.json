{
  "name": "custom-server-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "deploy": "sudo cross-env NODE_ENV=production pm2 start dist/index.js -i 4 --wait-ready",
    "delete:all": "pm2 delete all",
    "reload:all": "pm2 reload all",
    "pm2:dev": "sudo cross-env NODE_ENV=development pm2 start server/index.ts --name wordpress -i 4 --watch --wait-ready"
  },
  "dependencies": {
    "@koa/router": "^10.0.0",
    "apollo-server-koa": "^2.21.0",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "ioredis": "^4.23.0",
    "koa": "^2.13.1",
    "koa-bodyparser": "^4.3.0",
    "koa-redis": "^4.0.1",
    "koa-session": "^6.1.0",
    "next": "^10.0.7",
    "pg": "^8.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typedi": "^0.10.0",
    "typeorm": "^0.2.31",
    "typeorm-typedi-extensions": "^0.4.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/ioredis": "^4.22.0",
    "@types/koa": "^2.13.0",
    "@types/koa__router": "^8.0.4",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-redis": "^4.0.0",
    "@types/koa-session": "^5.10.3",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^10.2.4",
    "nodemon": "^2.0.7",
    "postcss": "^8.2.6",
    "tailwindcss": "^2.0.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "license": "MIT"
}
