{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "dist",
    "target": "ES2017",
    "removeComments": true,
    "sourceMap": false,
    "isolatedModules": false,
    "noEmit": false,
    "strict": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["server/**/*.ts"]
}
